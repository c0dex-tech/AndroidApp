<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundNavyBlue">

    <Button
        android:id="@+id/bathroomAvailabilityButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="@string/bathroomAvailabilityButtonTitle"
        android:textColor="@color/textColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="96dp"
        android:layout_height="62dp"
        android:layout_marginBottom="412dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/openClosedTextView"
        android:layout_width="160dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/open_textview"
        android:gravity="center"
        android:text="Open"
        android:textAlignment="center"
        android:textColor="@color/openTextViewColour"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bathroomAvailabilityButton" />

    <TextView
        android:id="@+id/openClosedTextView2"
        android:layout_width="160dp"
        android:layout_height="63dp"
        android:background="@drawable/closed_textview"
        android:gravity="center"
        android:text="Closed"
        android:textAlignment="center"
        android:textColor="@color/closedTextViewColour"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/openClosedTextView"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/changeBathroomAvailability"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="Change Bathroom \n Availability"
        android:textColor="@color/textColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>